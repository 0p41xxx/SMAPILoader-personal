<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    />
        <TextView
            android:id="@+id/supportGameVersionTextView"
            android:textSize="18sp"
            android:text="Support Game Version: x.x.x++"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/yourGameVersion"
            android:textSize="18sp"
            android:text="Your Game Version: x.x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/appVersionTextView"
            android:textSize="18sp"
            android:text="App Version: x.x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
         <TextView
            android:id="@+id/appBuildDate"
            android:textSize="18sp"
            android:text="App Build Date: xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18sp"
            android:text="SMAPI Port By NRTnarathip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    
    </LinearLayout>
   
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="50dp"
            android:gravity="center_horizontal"
            >
            <Button
                android:id="@+id/InstallSMAPI"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Install SMAPI Zip" 
                android:layout_marginVertical="10dp"
                />

            <Button
                android:id="@+id/InstallMod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Install Mod Zip" 
                android:layout_marginVertical="10dp"
                />

            <Button
                android:id="@+id/StartGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Start Game" 
                android:layout_marginVertical="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
